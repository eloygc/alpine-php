FROM alpine:edge

LABEL maintainer "Eloy GÃ³mez <sr.eloy@gmail.com>"

RUN echo "@edge-main http://dl-cdn.alpinelinux.org/alpine/edge/main" >> /etc/apk/repositories \
    && echo "@edge-community http://dl-cdn.alpinelinux.org/alpine/edge/community" >> /etc/apk/repositories \
    && apk add -U \
    tini \
    php7 \
    php7-bcmath \
    php7-ctype \
    php7-curl \
    php7-exif \
    php7-iconv \
    php7-json \
    php7-mysqli \
    php7-mbstring \
    php7-opcache \
    php7-openssl \
    php7-pcntl \
    php7-pdo_mysql \
    php7-xmlwriter \
    php7-phar \
    php7-posix \
    php7-session \
    php7-xml \
    php7-mcrypt \
    php7-xsl \
    php7-zip \
    php7-zlib \
    php7-fpm \
    && rm -rf /var/cache/apk/*

ADD config /

ENTRYPOINT ["/sbin/tini", "--"]

CMD ["/usr/sbin/php-fpm7", "-R", "--nodaemonize"]

EXPOSE 9000

WORKDIR /app